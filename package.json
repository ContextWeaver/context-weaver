{
  "name": "rpg-event-generator",
  "version": "3.0.1",
  "description": "Powerful procedural content generation system for dynamic, context-aware narratives and interactive experiences. Perfect for games, simulations, and creative applications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ContextWeaver/context-weaver.git"
  },
  "homepage": "https://contextweaver.github.io/context-weaver/",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "scripts/",
    "demo.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:scripts": "tsc --project tsconfig.scripts.json",
    "build:all": "npm run build && npm run build:scripts",
    "prepublishOnly": "npm run build:all",
    "demo": "node demo.js",
    "docs": "typedoc",
    "economy:list": "ts-node scripts/event-economy.ts list-themes",
    "economy:stats": "ts-node scripts/event-economy.ts stats",
    "export:unity": "ts-node scripts/export-templates.ts unity",
    "export:godot": "ts-node scripts/export-templates.ts godot",
    "export:unreal": "ts-node scripts/export-templates.ts unreal",
    "export:typescript": "ts-node scripts/export-templates.ts typescript",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "rpg",
    "procedural-generation",
    "events",
    "random",
    "game-development",
    "markov-chains",
    "game-dev",
    "narrative",
    "storytelling",
    "fantasy",
    "medieval",
    "adventure",
    "quest",
    "character-development",
    "world-building",
    "procedural-content",
    "event-system",
    "role-playing",
    "game-mechanics",
    "content-generation",
    "story-generator",
    "rpg-tools",
    "indie-games",
    "game-jam",
    "typescript",
    "javascript-games",
    "node-game",
    "text-generation",
    "nlp",
    "ai",
    "artificial-intelligence",
    "templates",
    "conditional-templates",
    "database",
    "unity",
    "godot",
    "unreal",
    "game-engines",
    "simulation",
    "educational",
    "business-simulations",
    "context-aware",
    "intelligent-generation"
  ],
  "author": {
    "name": "Decept1kon",
    "url": "https://github.com/Decept1kon"
  },
  "license": "MIT",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/Decept1kon"
  },
  "dependencies": {
    "chance": "^1.1.13"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/chance": "^1.1.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts",
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
